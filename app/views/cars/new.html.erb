
<div class="container marketing card border p-1">
<h1>Create a car</h1>
  <div class="row d-flex justify-content-center">
    <div class="col-10 p-4">
      <%= simple_form_for(@car) do |f| %>
        <%= f.input :category %>
        <%= f.input :brand %>
        <%= f.input :model %>
        <%= f.input :engine_size , as: :numeric%>
        <%= f.input :year , as: :integer%>
        <%= f.input :color %>
        <%= f.input :number_of_seats, as: :numeric %>
        <%= f.input :number_of_doors, as: :numeric %>
        <%= f.input :price, as: :float%>
        <%= f.input :address, as: :string%>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit class: "btn btn-dark"%>
      <% end %>
     </div>
  </div>
</div>
