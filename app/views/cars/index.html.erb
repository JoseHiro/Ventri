<div class="d-flex justify-content-end me-5" style="width-100vw; ">
  <h1 style="margin-right:5vw">Cars available to you</h1>
</div>
<div class="d-flex ">
<div class="m-3" style="width: 100%; height: 100vh; position: sticky; top:0; border-radius: 15px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div>
<%@cars.each_with_index do |car|%>
  <div class="d-flex ">
      <div class="card-trip m-3" style="border-radius: 15px; width: 500px">
        <% photos = car.photos %>
        <%= cl_image_tag photos[0].key, width: 500, height: 300, crop: :fill, style:"border-radius: 15px 0px 0px 15px" %>
        <div class="card-trip-infos">
          <div class="d-flex justify-content-between" style="width: 100%">
            <div>
              <h2><%= car.owner.first_name%>'s <%= car.brand%> <%=car.model%></h2>
              <p>Year of manufacture <%=car.year%></p>
              <p>Color: <%=car.color%></p>
              <p>Number of seats: <%=car.number_of_seats%></p>
              <p>Number of doors: <%=car.number_of_doors%></p>
              <p>Engine Size (L): <%=car.engine_size%></p>
            </div>
            <div>
              <h2 class="card-trip-pricing mt-3">Â£99.99</h2>
              <%= link_to "See Offer", car_path(car), class: "mt-3 btn btn-dark"%>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        </div>
      </div>
  </div>
<% end %>
</div>

</div>
