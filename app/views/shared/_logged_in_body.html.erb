
<div class="container">
  <div style="height: 800px; margin-top:80px;" class=" d-flex">

    <div style="width: 300px; height:400px; background-color: grey;">
      <div class="d-flex justify-content-center">
        <% if current_user.avatar.attached? %>
          <%= cl_image_tag current_user.avatar.key, height: 200, width: 200, class:"mt-4" %>
        <% else %>
          <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png", height: 200, width: 200,class:"mt-4", style:"border-radius:50%"%>
        <% end %>
      </div>

      <div class="d-flex justify-content-around" style="margin-top:40px;">
        <%= link_to "Booking", cars_path, class:"btn btn-primary"  %>
        <%= link_to "Edit account", edit_user_registration_path, class:"btn btn-primary" %>
      </div>
    </div>

    <div style="width: 700px; height:700px; background-color: grey;" class="ms-4">
      <h1 style="color:white">Current status</h1>
      <h2 style="color:white">Lent a car to help people and earn money!</h2>
      <h3>feedback from user</h3>
    </div>



  </div>
</div>
