<%# five input pictures ver %>

<div class="d-flex justify-content-center" style="border-radius: 15px; width 100%; height:450px">
  <% photos = @car.photos %>
  <div>
    <%= cl_image_tag photos[0].key, style:"width: 600px; border-radius: 15px 0px 0px 15px" %>
  </div>
  <div class = "ms-2">
    <div>
      <%= cl_image_tag photos[1].key, style:"width: 300px;" %>
      <%= cl_image_tag photos[2].key, style:"width: 300px; border-radius: 0px 15px 0px 0px" %>
    </div>
    <div>
      <%= cl_image_tag photos[3].key, style:"width: 300px;" %>
      <%= cl_image_tag photos[4].key, style:"width: 300px; border-radius: 0px 15px 0px 0px" %>
    </div>
  </div>
</div>


<div class="container marketing mb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5" style="width: 700px; border: solid 2px  #e6e6e6">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-success" %>
    </div>

    <% end %>
    <hr>

    <%= link_to "Sign up", new_user_registration_path, class:"mb-3 btn btn-outline-success"  %>
    </div>
  </div>
</div>

