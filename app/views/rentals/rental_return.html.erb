<div class="container d-flex align-items-center flex-column" style="margin-top:50px;">
  <div class="p-5" style="box-shadow: 0 0 15px rgba(0,0,0,0.2); width: 70vw; border-radius: 15px;">
    <h1><i class="fa-solid fa-handshake"></i> <strong>Return car process</strong></h1>
    <br>
    <h4>Please follow the following checklist to return the car to <%= @rental.car.owner.first_name %> <%= @rental.car.owner.last_name %> </h4>
    <%= simple_form_for(@rental) do |f| %>
      <%= f.input :end_milage, required: true, label: "End car mileage" %>
      <p style="font-size:12px; margin-top:-15px">*Will be validated by the car owner <%= @rental.car.owner.first_name%> <%= @rental.car.owner.last_name %> </p>
      <hr>
      <%= f.input :user_end_condition, label: "I, #{@rental.user.first_name} #{@rental.user.last_name}, accept the conditions, ensured the car condition is as I picked it up, and that the final mileage matches the one in the car.", required: true %>
      <%= f.submit "Return car", class: "btn btn-dark" %>
    <% end %>
  </div>
</div>
